<p id="notice"><%= notice %></p>

<%= form_for(@exam, url: choose_new_or_edit) do |f| %>

  <% if @exam.errors.any? %>
    <div id="error_explanation">
      <%# バリデーションエラーの件数を表示します。%>
      <h2><%= @exam.errors.count %>件のエラーがあります。</h2>

      <ul>
      <%# @exam.errorsは@blogをバリデーションした際のエラー情報です。
      # full_messagesは複数のエラーメッセージを表します。%>
      <% @exam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "return tweet list screen" , exams_path %>
